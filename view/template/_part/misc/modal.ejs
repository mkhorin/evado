<!-- _part/misc/modal -->
<div class="jmodal-area" data-jam="Modal">
    <div class="jmodal-stack">
        <div class="jmodal-stack-toggle root">
            <span class="glyphicon glyphicon-arrow-left"></span>
        </div><div class="jmodal-stack-pool"></div>
    </div>
    <div class="jmodal-pool"></div>

    <template data-id="stack">
        <div class="jmodal-stack-toggle">
            <span class="text" title="{{title}}">{{text}}</span>
            <span class="close">&times;</span>
        </div>
    </template>

    <template data-id="modal">
        <div class="jmodal with-header">
            <div class="jmodal-container">
                <div class="jmodal-header">
                    <h3 class="jmodal-title"></h3>
                </div>
                <div class="jmodal-body"></div>
            </div>
            <div class="jmodal-loader overlay"><i class="fa fa-spinner fa-spin"></i></div>
        </div>
    </template>
</div>