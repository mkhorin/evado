<!-- _part/attr/checkbox -->
<%
const p = {handler: 'Checkbox'};
%>
<%- include(_view.get('_part/attr/_params'), {p}) %>

<div class="form-attr form-group row <%- p.css %>"
     data-handler="<%= p.handler %>"
     data-action-binder="<%= p.actionBinder %>">
    <div class="<%- p.labelCss %>"></div>
    <div class="<%- p.valueCss %>">
        <input class="form-value" name="<%- p.name %>" type="hidden" value="<%- p.value %>">
        <div class="form-check" title="<%= p.extHint %>">
            <input class="form-check-input"<%- p.value ? ' checked' : '' %> type="checkbox">
            <label class="form-check-label" data-t="<%- p.translate %>"><%- p.label %></label>
        </div>
        <div class="error-block"></div>
        <div class="hint-block" data-t="<%- p.translate %>"><%- p.hint %></div>
    </div>
</div>