<!-- _part/attr/date -->
<%
const p = {
    handler: 'Date',
    utc: typeof utc === 'undefined' ? true : utc,
    options: typeof options === 'undefined' ? '' : JSON.stringify(options)
};
%>
<%- include('_params', {p}) %>

<div class="form-attr form-group <%- p.required %>"
     data-handler="<%= p.handler %>"
     data-action-binder='<%= p.actionBinder %>'
     data-utc="<%- p.utc %>"
     data-params="<%= p.options %>">
    <label class="control-label <%- p.labelCss %>" title="<%= p.extHint %>"
           data-t="<%- p.translate %>"><%- p.label %></label>
    <div class="<%- p.valueCss %>">
        <input name="<%- p.name %>" type="hidden" value="<%- p.value %>">
        <div class="input-group">
            <input type="text" <%- p.required %> class="datepicker form-control">
            <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
        </div>
        <div class="error-block"></div>
        <div class="hint-block" data-t="<%- p.translate %>"><%- p.hint %></div>
    </div>
</div>