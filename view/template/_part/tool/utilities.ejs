<!-- _part/tool/utilities -->
<%
if (typeof utilities !== 'undefined' && utilities.length) {
    const res = {
        action: _controller.action.name,
        items: utilities,
        menu: typeof utilityMenu !== 'undefined' ? utilityMenu : null
    };
    if (typeof params !== 'undefined') {
        Object.assign(res, params);
    }
%>
<div class="utility-container btn-set" data-jam="UtilityManager" data-command="utilities"
     data-url="<%- _url('default/utility') %>"
     data-params="<%= JSON.stringify(res) %>">

    <div class="utility-menu btn-group hidden">
        <button type="button" class="btn btn-white dropdown-toggle" title="Utilities" data-t="" data-toggle="dropdown">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu"></ul>
    </div>

    <template data-id="button">
        <button type="button" class="utility-item btn {{css}}" title="{{hint}}" data-t="">
            <span data-t="">{{name}}</span>
        </button>
    </template>

    <template data-id="menuItem">
        <li>
            <a href="#" class="utility-item" title="{{hint}}" data-t="">
                <span data-t="">{{name}}</span>
            </a>
        </li>
    </template>
</div>
<% } %>