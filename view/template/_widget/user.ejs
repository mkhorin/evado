<!-- _widget/user -->
<%
const user = _controller.user;
%>
<% if (user.identity) { %>
<li class="user-body">
    <p class="">
        <span class="fa fa-user text-primary mr5"></span>
        <b><%- _controller.user.getTitle() %></b>
    </p>
    <% if (user.assignments) { %>
    <p class="mb0">
        <span data-t="">Roles</span>:
        <b><%- user.assignments.join(', ') %></b>
    </p>
    <% } %>
</li>
<li class="user-footer">
    <form action="auth/sign-out" method="post">
        <div class="pull-left">
            <button type="submit" class="btn btn-warning btn-flat" data-t="">Sign out</button>
        </div>
        <div class="pull-right">
            <a href="auth/change-password" class="btn btn-default btn-flat" data-t="">Change password</a>
        </div>
    </form>
</li>
<% } else { %>
<li class="user-footer">
    <a href="auth/sign-in" class="btn btn-default btn-flat" data-t="">Sign in</a>
</li>
<% } %>