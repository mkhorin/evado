<%
const title = _t('Set new password');
const success = _controller.getFlash('success').join();
const error = _t(model.getFirstError('key'));

layout(_view.get('_layout/auth'));
block('title', title);
%>
<% if (success) { %>
<div class="alert-success alert"><%- success %></div>
<div class="text-center">
  <a href="/"><%- _t('Home') %></a>
</div>
<% } else { %>

<p class="login-box-msg"><%- title %></p>

<% if (error) { %>
<div class="alert-danger alert"><%- error %></div>
<% } %>

<form method="post" class="form">

  <%- include(_view.get('auth/_resetPasswordForm')) %>

  <div class="form-submit form-attr form-group">
    <button type="submit" class="btn-primary btn">
      <%- _t('Save') %>
    </button>
  </div>
</form>
<div class="login-box-footer">
  <a href="auth/request-reset" class="btn-link btn">
    <%- _t('Request password reset') %>
  </a>
</div>
<% } %>